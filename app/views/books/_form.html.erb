<%= simple_form_for book, url: (book.new_record? ? books_path : book_path(book)), html: { class: "contents" } do |form| %>  
  <%= form.input :title, placeholder: "add title", wrapper_html: { class: "my-5" }, input_html: { class: "form-input" } %>
    
  <%= form.input :author, placeholder: "add author", wrapper_html: { class: "my-5" }, input_html: { class: "form-input" } %>
    
  <%= form.input :isbn, placeholder: "add ISBN (13 digits)", wrapper_html: { class: "my-5" }, input_html: { class: "form-input" } %>
    
  <%= form.input :description, as: :text, placeholder: "add description", wrapper_html: { class: "my-5" }, input_html: { class: "form-input" } %>  
  
  <%= form.button :submit, class: "btn-submit" %> 
<% end %>
