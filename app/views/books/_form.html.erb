<%= simple_form_for book, html: { class: "contents" } do |form| %>  
  <%= form.input :title, wrapper_html: { class: "my-5" } %>
    
  <%= form.input :author, wrapper_html: { class: "my-5" } %>
    
  <%= form.input :isbn, wrapper_html: { class: "my-5" } %>
    
  <%= form.input :description, as: :text, wrapper_html: { class: "my-5" } %>  
  
  <%= form.button :submit %> 
<% end %>
