<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render "books/book", book: @book %>

    <%= link_to "Edit this book", edit_book_path(@book), class: "mt-2 btn-gray" %>

    <div class="inline-block ml-2">
      <%= button_to "Destroy this book", book_path(@book), method: :delete, class: "mt-2 btn-gray" %>
    </div>
    
    <%= link_to "Back to books", books_path, class: "ml-2 btn-gray" %>
  </div>
</div>
