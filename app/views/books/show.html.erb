<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <div class="book-border">
      <p class="book-text">
        <h3 class="book-title">
          <%= link_to @book.title, book_path(@book) %>
        </h3>
      </p>

      <p class="book-text">
        By
        <span class="font-semibold"><%= @book.author %></span>
      </p>

      <p class="book-text">
        Isbn:
        <span class="font-semibold"><%= @book.isbn %></span>
      </p>

      <p class="book-text">
        <%= @book.description %>
      </p>
    </div>

    <%= link_to "Edit this book", edit_book_path(@book), class: "mt-2 btn-gray" %>

    <div class="inline-block ml-2">
      <%= button_to "Destroy this book", book_path(@book), method: :delete, class: "mt-2 btn-gray" %>
    </div>
    
    <%= link_to "Back to books", books_path, class: "ml-2 btn-gray" %>
  </div>
</div>
