<%= simple_form_for :search, url: search_path, method: :get, html: { class: "flex gap-3" } do |f| %>
  <%= f.input :query, label: false, placeholder: "Search...", wrapper_html: { class: "w-full" }, input_html: { class: "form-input h-12 m-0" } %>
  <%= f.button :submit, "Search", class: "btn-submit w-40 h-12 m-0" %>
<% end %>
